<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <Button
        android:id="@+id/show_system_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示系统样式通知"/>

    <Button
        android:id="@+id/hide_system_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏系统样式通知"/>


    <Button
        android:id="@+id/show_custom_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示自定义样式通知"/>

    <Button
        android:id="@+id/hide_custom_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏自定义样式通知"/>
</LinearLayout>